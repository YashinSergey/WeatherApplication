<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/about_developer_fragment"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="UseCompoundDrawables">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/avatar_image_about_developer"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_gravity="center"
        app:roundAsCircle="true"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/avatar_image_about_developer"
        android:paddingHorizontal="@dimen/activity_horizontal_margin"
        tools:ignore="UnusedAttribute">

        <TextView
            android:id="@+id/about_developer_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_developer_text"
            android:textColor="@color/text_color_black"/>

    </androidx.core.widget.NestedScrollView>
</RelativeLayout>